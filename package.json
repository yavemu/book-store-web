{
  "name": "book-store-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose up",
    "docker:dev:build": "docker-compose down && docker-compose up --build -d",
    "docker:dev:detached": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:down:clean": "docker-compose down -v --remove-orphans",
    "docker:logs": "docker compose logs web",
    "docker:status": "docker-compose ps",
    "docker:restart": "docker-compose restart web",
    "docker:clean": "docker-compose down && docker network prune -f && docker system prune -f",
    "docker:shell": "docker-compose exec web sh",
    "docker:exec:build": "docker-compose exec web npm run build",
    "docker:exec:lint": "docker-compose exec web npm run lint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  }
}
